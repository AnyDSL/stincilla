fn @benchmark_acc(acc: Accelerator,  body: fn() -> ()) -> () { total_gpu_timing  += benchmark(get_kernel_time, iter_gpu,  body, acc.sync) }
fn @benchmark_fpga(sync: fn() -> (), body: fn() -> ()) -> () {
    let start = get_micro_time();
