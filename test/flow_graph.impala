fn main() -> i32 {
    let num_tasks = 3;
    let tasks = ~[num_tasks:FlowTask];

    let graph = create_graph();

    for t in range(0, num_tasks) {
        tasks(t) = with create_task(graph) {
            print_string("hello from task #");
            print_i32(t);
            print_string("\n");
        };
        if t > 0 {
            create_edge(tasks(t-1), tasks(t));
        }
    }

    execute_flowgraph(graph, tasks(0));

    0
}
